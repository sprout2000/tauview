{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Tauview",
    "version": "0.0.12"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true
      },
      "path": { "all": true },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["/**/*"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "setTitle": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "jp.sprout2000.Tauview",
      "targets": "all"
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "Tauview",
        "theme": "Dark",
        "resizable": true,
        "fullscreen": false,
        "width": 800,
        "height": 560,
        "minWidth": 800,
        "minHeight": 560
      }
    ]
  }
}
